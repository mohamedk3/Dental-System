extends baseEmail

block content
  p Hi #{firstName},
  p Thanks for signing up with our Dental System! You must press the button bellow or follow this link within 3 days of registration to activate your account: #{url}
  table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
    tbody
      tr
        td(align='left')
          table(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
              tr
                td
                  a(href=`${url}`, target='_blank') Activate your account
  p Have fun, and don't hesitate to contact us with your feedback.